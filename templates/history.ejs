<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head', { title: 'History' }) %>
    <link rel="stylesheet" href="/history.css">
    <script src="/history.js" defer></script>
</head>
<body>
<main>
<header>
    <a href="/"><img src="chart.jpg" alt="Home"></a>
    <h1>Transaction History</h1>
</header>
<section>
    <table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Category</th>
            <th>Amount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td colspan="5"><button style="margin-left: 5rem;">Add Transaction</button></td>
        </tr>
        <% for (const transaction of transactions) { %>
            <tr data-transaction="<%=transaction.id%>">
                <td><%=transaction.date%></td>
                <td><%=transaction.description%></td>
                <td><%=transaction.category[0].toUpperCase() + transaction.category.slice(1)%></td>
                <td><%=`$${(transaction.amount / 100.0).toFixed(2)}`%></td>
                <td><button class="edit-button">Edit Transaction</button></td>
            </tr>
        <% } %>
    </tbody>
    </table>
</section>
</main>
</body>
</html>